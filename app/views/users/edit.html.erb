<div class="text-center mb-3 mt-5">
  <h1>Edit Profile</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @user) do |form| %>
    <%= render 'layouts/error_messages', model: form.object %>
      <div class="mb-5">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
    
      <div class="mb-5">
        <%= form.label :email %>
        <%= form.email_field :email,class: 'form-control' %>
      </div>
    
      <div class="mb-5">
        <%= form.label :icon %>
        <br>
        <%= form.file_field :icon %>
      </div>
      
      <% if @user.icon.attached? %>
        <%= image_tag @user.icon.variant(resize: "100x100").processed, class: "rounded-circle", alt: "User Icon", style: "width: 100px; height: 100px;" %>
      <% else %>
        <%= image_tag "default_icon.png", class: "rounded-circle", alt: "Default User Icon", style: "width: 100px; height: 100px;" %>
      <% end %>

      <div class="d-flex justify-content-center">
       <%= form.submit 'Update', class: 'btn btn-primary' %>
      </div>
      

      
    <% end %>
  </div>
</div>
