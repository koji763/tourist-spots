<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <% if review.new_record? %>
      <%= form_with(model: [tourist_spot, review], local: true) do |form| %>
      <%= render 'layouts/error_messages', model: form.object %>
        <h3 class="mt-3" style="font-weight: bold;">Spot: <%= tourist_spot.spot_name %></h3>
        <div class="field mt-3">
          <%= form.label :evaluation %>
          <%= form.number_field :evaluation, in: 1..5, step: 1, class: 'form-control' %>
        </div>
        <div class="field mt-3">
          <%= form.label :comment %>
          <%= form.text_area :comment, class: 'form-control' %>
        </div>
        <div class="d-flex justify-content-center mt-5">
          <%= form.submit btn_message, class: 'btn btn-primary' %>
        </div>
      <% end %>
    <% else %>
      <%= form_with(model: review, local: true) do |form| %>
        <h3 class="mt-3" style="font-weight: bold;">Spot: <%= review.tourist_spot.spot_name %></h3>
        <div class="field mt-3">
          <%= form.label :evaluation %>
          <%= form.number_field :evaluation, in: 1..5, step: 1, class: 'form-control' %>
        </div>
        <div class="field mt-3">
          <%= form.label :comment %>
          <%= form.text_area :comment, class: 'form-control' %>
        </div>
        <div class="d-flex justify-content-center mt-5">
          <%= form.submit btn_message, class: 'btn btn-primary' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
